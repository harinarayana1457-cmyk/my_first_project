// ============== COMPONENTS ==============

interface CategoryCardProps {
  icon: string;
  label: string;
  onClick: () => void;
}

const CategoryCard: React.FC<CategoryCardProps> = ({ icon, label, onClick }) => (
  <button
    onClick={onClick}
    className="flex flex-col items-center gap-2 p-6 rounded-xl bg-white border-2 border-gray-200 hover:border-green-600 hover:shadow-lg transition cursor-pointer"
  >
    <span className="text-5xl">{icon}</span>
    <span className="text-sm font-semibold text-gray-700">{label}</span>
  </button>
);

interface ListItemProps {
  item: any;
  category: Category;
  onSelect: () => void;
  onFavoriteToggle: () => void;
  isFavorite: boolean;
}

const ListItem: React.FC<ListItemProps> = ({ item, category, onSelect, onFavoriteToggle, isFavorite }) => {
  const getSubtitle = () => {
    switch (category) {
      case 'movies':
        return `${item.genre} ‚Ä¢ ${item.duration}`;
      case 'travel':
        return `${item.days} days ‚Ä¢ ‚Çπ${item.price.toLocaleString()}`;
      case 'shopping':
        return `${item.category} ‚Ä¢ ‚Çπ${item.price.toLocaleString()}`;
      case 'eating':
        return `${item.cuisine} ‚Ä¢ ${item.deliveryTime}`;
      default:
        return '';
    }
  };

  return (
    <div
      onClick={onSelect}
      className="flex items-center gap-4 p-4 bg-white rounded-lg border border-gray-200 hover:shadow-md transition cursor-pointer"
    >
      <div className="text-4xl">{item.image}</div>
      <div className="flex-1">
        <h3 className="font-semibold text-gray-800">{item.name}</h3>
        <p className="text-sm text-gray-600">{getSubtitle()}</p>
        <div className="flex items-center gap-2 mt-1">
          <span className="text-yellow-500">‚≠ê</span>
          <span className="text-sm font-medium">{item.rating}</span>
          <span className="text-xs text-gray-500">({item.reviews})</span>
        </div>
      </div>
      <button
        onClick={(e) => {
          e.stopPropagation();
          onFavoriteToggle();
        }}
        className="text-2xl hover:scale-110 transition"
      >
        {isFavorite ? '‚ù§Ô∏è' : 'ü§ç'}
      </button>
    </div>
  );
};

interface DetailPageProps {
  item: any;
  category: Category;
  onBack: () => void;
  onAddToCart: (quantity: number) => void;
  isFavorite: boolean;
  onFavoriteToggle: () => void;
}

const DetailPage: React.FC<DetailPageProps> = ({
  item,
  category,
  onBack,
  onAddToCart,
  isFavorite,
  onFavoriteToggle
}) => {
  const [quantity, setQuantity] = useState(1);

  const renderDetails = () => {
    switch (category) {
      case 'movies':
        return (
          <div className="space-y-3 text-gray-700">
            <p><strong>Genre:</strong> {item.genre}</p>
            <p><strong>Duration:</strong> {item.duration}</p>
            <p><strong>Language:</strong> {item.language}</p>
            <p><strong>Release Date:</strong> {item.releaseDate}</p>
            <p><strong>Theaters:</strong> {item.theaters}</p>
            <p className="text-sm mt-3">{item.description}</p>
          </div>
        );
      case 'travel':
        return (
          <div className="space-y-3 text-gray-700">
            <p><strong>Duration:</strong> {item.days} days</p>
            <p><strong>Price:</strong> ‚Çπ{item.price.toLocaleString()}</p>
            <p><strong>Start Date:</strong> {item.startDate}</p>
            <p><strong>Location:</strong> {item.location}</p>
            <div>
              <strong>Includes:</strong>
              <ul className="list-disc ml-5 mt-1">
                {item.includes.map((inc: string) => (
                  <li key={inc}>{inc}</li>
                ))}
              </ul>
            </div>
          </div>
        );
      case 'shopping':
        return (
          <div className="space-y-3 text-gray-700">
            <p><strong>Price:</strong> ‚Çπ{item.price.toLocaleString()}</p>
            <p><strong>Category:</strong> {item.category}</p>
            <p><strong>Stock:</strong> {item.inStock ? '‚úÖ In Stock' : '‚ùå Out of Stock'}</p>
            <p className="text-sm mt-3">{item.description}</p>
          </div>
        );
      case 'eating':
        return (
          <div className="space-y-3 text-gray-700">
            <p><strong>Cuisine:</strong> {item.cuisine}</p>
            <p><strong>Price Range:</strong> {item.price}</p>
            <p><strong>Delivery Time:</strong> {item.deliveryTime}</p>
            <p><strong>Distance:</strong> {item.distance}</p>
            <p><strong>Address:</strong> {item.address}</p>
            <p><strong>Hours:</strong> {item.openTime}</p>
          </div>
        );
      default:
        return null;
    }
  };

  const getPrice = () => {
    if (category === 'movies') return 399;
    if (category === 'travel') return item.price;
    if (category === 'shopping') return item.price;
    if (category === 'eating') return 500;
    return 0;
  };

  return (
    <div className="h-full flex flex-col bg-gray-50">
      {/* Header */}
      <div className="bg-white border-b p-4 flex items-center justify-between sticky top-0 z-10">
        <button onClick={onBack} className="text-2xl font-bold">‚Üê</button>
        <h1 className="font-bold text-gray-800">Details</h1>
        <button onClick={onFavoriteToggle} className="text-2xl">
          {isFavorite ? '‚ù§Ô∏è' : 'ü§ç'}
        </button>
      </div>

      {/* Content */}
      <div className="flex-1 overflow-auto p-4">
        <div className="bg-white rounded-xl p-6 shadow-sm">
          <div className="text-center mb-4">
            <div className="text-6xl mb-3">{item.image}</div>
            <h2 className="text-2xl font-bold text-gray-800">{item.name}</h2>
            <div className="flex items-center justify-center gap-2 mt-2">
              <span className="text-yellow-500">‚≠ê</span>
              <span className="font-semibold">{item.rating}</span>
              <span className="text-sm text-gray-500">({item.reviews} reviews)</span>
            </div>
          </div>

          <div className="border-t pt-4 mt-4">
            {renderDetails()}
          </div>

          <div className="border-t pt-4 mt-4">
            <div className="flex items-center justify-between mb-4">
              <span className="text-lg font-semibold">Quantity:</span>
              <div className="flex items-center gap-3">
                <button
                  onClick={() => setQuantity(Math.max(1, quantity - 1))}
                  className="w-8 h-8 rounded-full bg-gray-200 hover:bg-gray-300 font-bold"
                >
                  -
                </button>
                <span className="w-8 text-center font-semibold">{quantity}</span>
                <button
                  onClick={() => setQuantity(quantity + 1)}
                  className="w-8 h-8 rounded-full bg-gray-200 hover:bg-gray-300 font-bold"
                >
                  +
                </button>
              </div>
            </div>

            <div className="flex items-center justify-between mb-4">
              <span className="text-lg font-semibold">Total:</span>
              <span className="text-2xl font-bold text-green-600">
                ‚Çπ{(getPrice() * quantity).toLocaleString()}
              </span>
            </div>

            <button
              onClick={() => onAddToCart(quantity)}
              className="w-full bg-green-600 text-white py-3 rounded-lg font-semibold hover:bg-green-700 transition"
            >
              Add to Cart
            </button>
          </div>
        </div>
      </div>
    </div>
  );
};

// ============== MAIN APP ==============

export default function BookingApp() {
  const [viewMode, setViewMode] = useState<ViewMode>('home');
  const [currentCategory, setCurrentCategory] = useState<Category>('movies');
  const [selectedItem, setSelectedItem] = useState<any>(null);
  const [cart, setCart] = useState<CartItem[]>([]);
  const [favorites, setFavorites] = useState<Set<string>>(new Set());
  const [bookings, setBookings] = useState<Booking[]>([]);
  const [searchQuery, setSearchQuery] = useState('');

  const getCategoryData = (category: Category) => {
    switch (category) {
      case 'movies': return MOVIES;
      case 'travel': return TRAVEL_PACKAGES;
      case 'shopping': return PRODUCTS;
      case 'eating': return RESTAURANTS;
    }
  };

  const filteredItems = useMemo(() => {
    const items = getCategoryData(currentCategory);
    if (!searchQuery) return items;
    return items.filter(item => 
      item.name.toLowerCase().includes(searchQuery.toLowerCase())
    );
  }, [currentCategory, searchQuery]);

  const toggleFavorite = (category: Category, id: number) => {
    const key = `${category}-${id}`;
    setFavorites(prev => {
      const newSet = new Set(prev);
      if (newSet.has(key)) {
        newSet.delete(key);
      } else {
        newSet.add(key);
      }
      return newSet;
    });
  };

  const addToCart = (item: any, quantity: number, category: Category) => {
    const price = category === 'movies' ? 399 :
                  category === 'eating' ? 500 :
                  item.price;

    const existingIndex = cart.findIndex(c => c.id === item.id && c.categoryType === category);
    
    if (existingIndex >= 0) {
      const newCart = [...cart];
      newCart[existingIndex].quantity += quantity;
      setCart(newCart);
    } else {
      setCart([...cart, {
        id: item.id,
        name: item.name,
        price,
        quantity,
        category: item.genre || item.destination || item.category || item.cuisine,
        image: item.image,
        categoryType: category
      }]);
    }
    
    setViewMode('cart');
  };

  const removeFromCart = (index: number) => {
    setCart(cart.filter((_, i) => i !== index));
  };

  const updateQuantity = (index: number, newQuantity: number) => {
    if (newQuantity < 1) return;
    const newCart = [...cart];
    newCart[index].quantity = newQuantity;
    setCart(newCart);
  };

  const cartTotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);

  const completeBooking = () => {
    const newBooking: Booking = {
      id: Date.now().toString(),
      date: new Date().toLocaleDateString(),
      itemName: cart.map(c => c.name).join(', '),
      quantity: cart.reduce((sum, c) => sum + c.quantity, 0),
      total: cartTotal,
      category: cart[0]?.categoryType || 'movies'
    };
    
    setBookings([...bookings, newBooking]);
    setCart([]);
    setViewMode('confirmation');
  };

  // HOME VIEW
  if (viewMode === 'home') {
    return (
      <div className="min-h-screen bg-gradient-to-br from-green-50 to-blue-50 p-6">
        <div className="max-w-4xl mx-auto">
          {/* Header */}
          <div className="text-center mb-8">
            <h1 className="text-4xl font-bold text-gray-800 mb-2">BookIt</h1>
            <p className="text-gray-600">Your all-in-one booking platform</p>
          </div>

          {/* Categories Grid */}
          <div className="grid grid-cols-2 gap-4 mb-6">
            <CategoryCard
              icon="üé¨"
              label="Movies"
              onClick={() => {
                setCurrentCategory('movies');
                setViewMode('list');
              }}
            />
            <CategoryCard
              icon="‚úàÔ∏è"
              label="Travel"
              onClick={() => {
                setCurrentCategory('travel');
                setViewMode('list');
              }}
            />
            <CategoryCard
              icon="üõçÔ∏è"
              label="Shopping"
              onClick={() => {
                setCurrentCategory('shopping');
                setViewMode('list');
              }}
            />
            <CategoryCard
              icon="üçΩÔ∏è"
              label="Dining"
              onClick={() => {
                setCurrentCategory('eating');
                setViewMode('list');
              }}
            />
          </div>

          {/* Quick Actions */}
          <div className="flex gap-3">
            <button
              onClick={() => setViewMode('cart')}
              className="flex-1 bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition flex items-center justify-center gap-2"
            >
              <ShoppingCart className="w-5 h-5" />
              <span className="font-semibold">Cart ({cart.length})</span>
            </button>
            <button
              onClick={() => setViewMode('bookings')}
              className="flex-1 bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition flex items-center justify-center gap-2"
            >
              <Clock className="w-5 h-5" />
              <span className="font-semibold">Bookings</span>
            </button>
          </div>
        </div>
      </div>
    );
  }

  // LIST VIEW
  if (viewMode === 'list') {
    return (
      <div className="min-h-screen bg-gray-50 flex flex-col">
        {/* Header */}
        <div className="bg-white border-b p-4 sticky top-0 z-10">
          <div className="flex items-center justify-between mb-3">
            <button onClick={() => setViewMode('home')} className="text-2xl font-bold">‚Üê</button>
            <h1 className="font-bold text-gray-800 capitalize">{currentCategory}</h1>
            <button onClick={() => setViewMode('cart')} className="relative">
              <ShoppingCart className="w-6 h-6" />
              {cart.length > 0 && (
                <span className="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
                  {cart.length}
                </span>
              )}
            </button>
          </div>
          
          <div className="relative">
            <Search className="absolute left-3 top-3 w-5 h-5 text-gray-400" />
            <input
              type="text"
              placeholder="Search..."
              value={searchQuery}
              onChange={(e) => setSearchQuery(e.target.value)}
              className="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
            />
          </div>
        </div>

        {/* List */}
        <div className="flex-1 overflow-auto p-4 space-y-3">
          {filteredItems.map(item => (
            <ListItem
              key={item.id}
              item={item}
              category={currentCategory}
              onSelect={() => {
                setSelectedItem(item);
                setViewMode('detail');
              }}
              onFavoriteToggle={() => toggleFavorite(currentCategory, item.id)}
              isFavorite={favorites.has(`${currentCategory}-${item.id}`)}
            />
          ))}
        </div>
      </div>
    );
  }

  // DETAIL VIEW
  if (viewMode === 'detail' && selectedItem) {
    return (
      <DetailPage
        item={selectedItem}
        category={currentCategory}
        onBack={() => setViewMode('list')}
        onAddToCart={(quantity) => addToCart(selectedItem, quantity, currentCategory)}
        isFavorite={favorites.has(`${currentCategory}-${selectedItem.id}`)}
        onFavoriteToggle={() => toggleFavorite(currentCategory, selectedItem.id)}
      />
    );
  }

  // CART VIEW
  if (viewMode === 'cart') {
    return (
      <div className="min-h-screen bg-gray-50 flex flex-col">
        <div className="bg-white border-b p-4 flex items-center justify-between">
          <button onClick={() => setViewMode('home')} className="text-2xl font-bold">‚Üê</button>
          <h1 className="font-bold text-gray-800">Shopping Cart</h1>
          <div className="w-6"></div>
        </div>

        {cart.length === 0 ? (
          <div className="flex-1 flex flex-col items-center justify-center p-8">
            <ShoppingCart className="w-16 h-16 text-gray-300 mb-4" />
            <p className="text-gray-500 text-lg">Your cart is empty</p>
            <button
              onClick={() => setViewMode('home')}
              className="mt-4 px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700"
            >
              Start Shopping
            </button>
          </div>
        ) : (
          <>
            <div className="flex-1 overflow-auto p-4 space-y-3">
              {cart.map((item, index) => (
                <div key={index} className="bg-white p-4 rounded-lg shadow-sm">
                  <div className="flex items-center gap-3">
                    <div className="text-3xl">{item.image}</div>
                    <div className="flex-1">
                      <h3 className="font-semibold">{item.name}</h3>
                      <p className="text-sm text-gray-600">{item.category}</p>
                      <p className="text-green-600 font-semibold">‚Çπ{item.price.toLocaleString()}</p>
                    </div>
                    <button
                      onClick={() => removeFromCart(index)}
                      className="text-red-500 hover:text-red-700"
                    >
                      üóëÔ∏è
                    </button>
                  </div>
                  
                  <div className="flex items-center justify-between mt-3 pt-3 border-t">
                    <span className="text-sm text-gray-600">Quantity:</span>
                    <div className="flex items-center gap-2">
                      <button
                        onClick={() => updateQuantity(index, item.quantity - 1)}
                        className="w-7 h-7 rounded-full bg-gray-200 hover:bg-gray-300 text-sm font-bold"
                      >
                        -
                      </button>
                      <span className="w-8 text-center">{item.quantity}</span>
                      <button
                        onClick={() => updateQuantity(index, item.quantity + 1)}
                        className="w-7 h-7 rounded-full bg-gray-200 hover:bg-gray-300 text-sm font-bold"
                      >
                        +
                      </button>
                    </div>
                  </div>
                </div>
              ))}
            </div>

            <div className="bg-white border-t p-4">
              <div className="flex items-center justify-between mb-4">
                <span className="text-lg font-semibold">Total:</span>
                <span className="text-2xl font-bold text-green-600">
                  ‚Çπ{cartTotal.toLocaleString()}
                </span>
              </div>
              <button
                onClick={completeBooking}
                className="w-full bg-green-600 text-white py-3 rounded-lg font-semibold hover:bg-green-700"
              >
                Proceed to Checkout
              </button>
            </div>
          </>
        )}
      </div>
    );
  }

  // CONFIRMATION VIEW
  if (viewMode === 'confirmation') {
    return (
      <div className="min-h-screen bg-gray-50 flex items-center justify-center p-6">
        <div className="bg-white rounded-xl p-8 shadow-lg max-w-md w-full text-center">
          <div className="text-6xl mb-4">‚úÖ</div>
          <h2 className="text-2xl font-bold text-gray-800 mb-2">Booking Confirmed!</h2>
          <p className="text-gray-600 mb-6">Your booking has been successfully placed.</p>
          
          <div className="space-y-3">
            <button
              onClick={() => setViewMode('bookings')}
              className="w-full bg-green-600 text-white py-3 rounded-lg font-semibold hover:bg-green-700"
            >
              View Bookings
            </button>
            <button
              onClick={() => setViewMode('home')}
              className="w-full bg-gray-200 text-gray-800 py-3 rounded-lg font-semibold hover:bg-gray-300"
            >
              Back to Home
            </button>
          </div>
        </div>
      </div>
    );
  }

  // BOOKINGS VIEW
  if (viewMode === 'bookings') {
    return (
      <div className="min-h-screen bg-gray-50 flex flex-col">
        <div className="bg-white border-b p-4 flex items-center justify-between">
          <button onClick={() => setViewMode('home')} className="text-2xl font-bold">‚Üê</button>
          <h1 className="font-bold text-gray-800">My Bookings</h1>
          <div className="w-6"></div>
        </div>

        {bookings.length === 0 ? (
          <div className="flex-1 flex flex-col items-center justify-center p-8">
            <Clock className="w-16 h-16 text-gray-300 mb-4" />
            <p className="text-gray-500 text-lg">No bookings yet</p>
            <button
              onClick={() => setViewMode('home')}
              className="mt-4 px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700"
            >
              Start Booking
            </button>
          </div>
        ) : (
          <div className="flex-1 overflow-auto p-4 space-y-3">
            {bookings.map(booking => (
              <div key={booking.id} className="bg-white p-4 rounded-lg shadow-sm">
                <div className="flex items-center justify-between mb-2">
                  <span className="font-semibold text-gray-800 capitalize">{booking.category}</span>
                  <span className="text-sm text-gray-500">{booking.date}</span>
                </div>
                <p className="text-gray-700 mb-2">{booking.itemName}</p>
                <div className="flex items-center justify-between pt-2 border-t">
                  <span className="text-sm text-gray-600">Qty: {booking.quantity}</span>
                  <span className="font-bold text-green-600">‚Çπ{booking.total.toLocaleString()}</span>
                </div>
              </div>
            ))}
          </div>
        )}
      </div>
    );
  }

  return null;
}
