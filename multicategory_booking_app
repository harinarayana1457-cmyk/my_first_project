import React, { useState, useMemo } from 'react';
import { Menu, Heart, Search, ShoppingCart, MapPin, Clock, Star, DollarSign, Home } from 'lucide-react';

// ============== TYPE DEFINITIONS ==============

interface BaseItem {
  id: number;
  name: string;
  image: string;
  rating: number;
  reviews: number;
  isFavorite?: boolean;
}

interface Movie extends BaseItem {
  genre: string;
  duration: string;
  releaseDate: string;
  language: string;
  description: string;
  theaters: string;
}

interface TravelPackage extends BaseItem {
  destination: string;
  days: number;
  price: number;
  location: string;
  includes: string[];
  startDate: string;
}

interface Product extends BaseItem {
  price: number;
  category: string;
  description: string;
  inStock: boolean;
}

interface Restaurant extends BaseItem {
  cuisine: string;
  price: string;
  deliveryTime: string;
  distance: string;
  address: string;
  openTime: string;
}

interface CartItem {
  id: number;
  name: string;
  price: number;
  quantity: number;
  category: string;
  image: string;
  categoryType: Category;
}

interface Booking {
  id: string;
  date: string;
  itemName: string;
  quantity: number;
  total: number;
  category: Category;
}

type ViewMode = 'home' | 'list' | 'detail' | 'cart' | 'checkout' | 'confirmation' | 'bookings';
type Category = 'movies' | 'travel' | 'shopping' | 'eating';

// ============== MOCK DATA ==============

