    <script>
        const DATA = {{ data|tojson }};
        let cart = [];
        let favorites = new Set();
        let currentCategory = 'movies';
        let currentItem = null;
        let quantity = 1;
        
        function showView(view) {
            document.querySelectorAll('[id$="View"]').forEach(el => el.classList.add('hidden'));
            
            if (view === 'home') {
                document.getElementById('homeView').classList.remove('hidden');
            } else if (view === 'list') {
                document.getElementById('listView').classList.remove('hidden');
                renderList();
            } else if (view === 'detail') {
                document.getElementById('detailView').classList.remove('hidden');
                renderDetail();
            } else if (view === 'cart') {
                document.getElementById('cartView').classList.remove('hidden');
                renderCart();
            } else if (view === 'confirmation') {
                document.getElementById('confirmationView').classList.remove('hidden');
            } else if (view === 'bookings') {
                document.getElementById('bookingsView').classList.remove('hidden');
                loadBookings();
            }
            
            updateCartCount();
        }
        
        function showCategory(category) {
            currentCategory = category;
            document.getElementById('categoryTitle').textContent = category.charAt(0).toUpperCase() + category.slice(1);
            showView('list');
        }
        
        function getCategoryData() {
            return DATA[currentCategory] || [];
        }
        
        function renderList() {
            const items = getCategoryData();
            const html = items.map(item => `
                <div class="list-item" onclick="showItemDetail(${item.id})">
                    <div class="icon">${item.image}</div>
                    <div class="content">
                        <h3>${item.name}</h3>
                        <div class="subtitle">${getSubtitle(item)}</div>
                        <div class="rating">
                            <span>‚≠ê</span>
                            <span>${item.rating}</span>
                            <span style="color: #6b7280;">(${item.reviews})</span>
                        </div>
                    </div>
                    <button class="favorite-btn" onclick="toggleFavorite(event, '${currentCategory}-${item.id}')">
                        ${favorites.has(`${currentCategory}-${item.id}`) ? '‚ù§Ô∏è' : 'ü§ç'}
                    </button>
                </div>
            `).join('');
            
            document.getElementById('itemsList').innerHTML = html;
        }
        
        function getSubtitle(item) {
            if (currentCategory === 'movies') return `${item.genre} ‚Ä¢ ${item.duration}`;
            if (currentCategory === 'travel') return `${item.days} days ‚Ä¢ ‚Çπ${item.price.toLocaleString()}`;
            if (currentCategory === 'shopping') return `${item.category} ‚Ä¢ ‚Çπ${item.price.toLocaleString()}`;
            if (currentCategory === 'eating') return `${item.cuisine} ‚Ä¢ ${item.deliveryTime}`;
            return '';
        }
        
        function toggleFavorite(event, key) {
            event.stopPropagation();
            if (favorites.has(key)) {
                favorites.delete(key);
            } else {
                favorites.add(key);
            }
            renderList();
        }
        
        function showItemDetail(id) {
            const items = getCategoryData();
            currentItem = items.find(item => item.id === id);
            quantity = 1;
            showView('detail');
        }
        
        function renderDetail() {
            if (!currentItem) return;
            
            const price = getItemPrice(currentItem);
            const details = getItemDetails(currentItem);
            
            const html = `
                <div class="detail-icon">${currentItem.image}</div>
                <h2 class="detail-title">${currentItem.name}</h2>
                <div class="detail-rating">
                    <span>‚≠ê</span>
                    <span style="font-weight: 600;">${currentItem.rating}</span>
                    <span style="color: #6b7280;">(${currentItem.reviews} reviews)</span>
                </div>
                
                <div class="detail-info">
                    ${details}
                </div>
                
                <div style="border-top: 1px solid #e5e7eb; padding-top: 20px; margin-top: 20px;">
                    <div class="quantity-control">
                        <span style="font-size: 1.125rem; font-weight: 600;">Quantity:</span>
                        <div class="quantity-buttons">
                            <button onclick="changeQuantity(-1)">-</button>
                            <span id="quantityDisplay">${quantity}</span>
                            <button onclick="changeQuantity(1)">+</button>
                        </div>
                    </div>
                    
                    <div class="total-price">
                        <span style="font-weight: 600;">Total:</span>
                        <span class="amount">‚Çπ<span id="totalDisplay">${(price * quantity).toLocaleString()}</span></span>
                    </div>
                    
                    <button class="btn-primary" onclick="addToCart()">Add to Cart</button>
                </div>
            `;
            
            document.getElementById('detailContent').innerHTML = html;
            
            const favoriteBtn = document.getElementById('detailFavorite');
            favoriteBtn.textContent = favorites.has(`${currentCategory}-${currentItem.id}`) ? '‚ù§Ô∏è' : 'ü§ç';
        }
        
        function getItemDetails(item) {
            if (currentCategory === 'movies') {
                return `
                    <p><strong>Genre:</strong> ${item.genre}</p>
                    <p><strong>Duration:</strong> ${item.duration}</p>
                    <p><strong>Language:</strong> ${item.language}</p>
                    <p><strong>Release Date:</strong> ${item.releaseDate}</p>
                    <p><strong>Theaters:</strong> ${item.theaters}</p>
                    <p style="margin-top: 10px;">${item.description}</p>
                `;
            } else if (currentCategory === 'travel') {
                return `
                    <p><strong>Duration:</strong> ${item.days} days</p>
                    <p><strong>Price:</strong> ‚Çπ${item.price.toLocaleString()}</p>
                    <p><strong>Start Date:</strong> ${item.startDate}</p>
                    <p><strong>Location:</strong> ${item.location}</p>
                    <p><strong>Includes:</strong></p>
                    <ul style="margin-left: 20px; margin-top: 5px;">
                        ${item.includes.map(inc => `<li>${inc}</li>`).join('')}
                    </ul>
                `;
            } else if (currentCategory === 'shopping') {
                return `
                    <p><strong>Price:</strong> ‚Çπ${item.price.toLocaleString()}</p>
                    <p><strong>Category:</strong> ${item.category}</p>
                    <p><strong>Stock:</strong> ${item.inStock ? '‚úÖ In Stock' : '‚ùå Out of Stock'}</p>
                    <p style="margin-
